    <div class="modal inmodal fade" id="mdlLogin" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header justify-content-center">
                    <h3 class="text-primary m-0">Login</h3>
                </div>
                <div class="modal-body">
                    <div class="login-clean">
                        <form method="post" id="frmLogin">

                            <div class="illustration"><i class="icon ion-ios-navigate"></i></div>
                            <div class="form-group"><input class="form-control" type="Email" name="email" placeholder="Email"></div>
                            <div class="form-group"><input class="form-control" type="Password" name="password" placeholder="Password"></div>
                            <div class="form-group">

                            </div><a class="forgot" href="#">Forgot password?</a>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary btn-block" type="button" onclick='insertRecord("Accounts", "Login", "frmLogin")'>Log In</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>

                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="mdlRegistration" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header justify-content-center">
                    <h3 class="text-primary m-0">Registration</h3>
                </div>
                <div class="modal-body">
                    <form method="post" id="frmRegistration">
                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label class="control-label text-info">First Name</label>
                                    <input class="form-control" name="FirstName" placeholder="First Name" />
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label class="control-label text-info">Last Name</label>
                                    <input class="form-control" name="LastName" placeholder="Last Name" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label text-info">Email Address</label>
                            <input class="form-control" type="email" name="Email" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label class="control-label text-info">Password</label>
                            <input class="form-control" type="password" name="Password" placeholder="Password">
                        </div>
                        <p class="already text-dark">
                            You already have an account?
                            <a href="#"> Login here</a>
                        </p>

                    </form>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary btn-block" type="button" onclick='insertRecord("Accounts", "Registration", "frmRegistration")'>Sign Up</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

