@model WMS.Models.Entities.Products

<div class="col-md-12">
    <form enctype="multipart/form-data" id="frmCreateForm">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Model Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class="form-group">
                    <label asp-for="ProductTypeId" class="control-label">Product Category</label>
                    <select asp-for="ProductTypeId" id="_ProductTypeId" class="form-control" asp-items="ViewBag.ProductType">
                        <option disabled selected value="" class="">Select Product Category</option>
                    </select>
                    <span asp-validation-for="ProductTypeId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="form-group">
                    <label asp-for="ProductCode" class="control-label">Product Code/ Product Model</label>
                    <input asp-for="ProductCode" class="form-control" />
                    <span asp-validation-for="ProductCode" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class="form-group">
                    <label asp-for="BrandId" class="control-label">Brand</label>
                    <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brand">
                        <option disabled selected value="" class="">Select Brand</option>
                    </select>
                    <span asp-validation-for="BrandId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="form-group">
                    <label asp-for="ManufacturerId" class="control-label">Manufacturer</label>
                    <select asp-for="ManufacturerId" class="form-control" asp-items="ViewBag.Manufacturer">
                        <option disabled selected value="" class="">Select Manufacturer</option>
                    </select>
                    <span asp-validation-for="ManufacturerId" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class="form-group">
                    <label asp-for="SellingPrice" class="control-label">Selling Price</label>
                    <input asp-for="SellingPrice" class="form-control" />
                    <span asp-validation-for="SellingPrice" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="form-group">
                    <label asp-for="CostPrice" class="control-label">Cost Price</label>
                    <input asp-for="CostPrice" class="form-control" />
                    <span asp-validation-for="CostPrice" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group right-align">
                    <br />
                    <br />
                    <hr />
                    <button type="button" class="btn btn-sm btn-outline-success" style="width:150px" onclick='insertRecord("Products", "CreateProductModel", "frmCreateForm")'> <i class="zmdi zmdi-save"></i> Save</button>
                    <button type="button" class="btn btn-sm btn-outline-danger" style="width:150px" onclick='closeModalCreateForm("mdlCreateForm","CreateForm")'><i class="zmdi zmdi-close"></i> Cancel</button>
                </div>
            </div>
        </div>
    </form>
</div>


<script type="text/javascript">



</script>
